        address owner = ERC721UpgradeableMinimal.ownerOf(tokenId);

        _beforeTokenTransfer(owner, address(0), tokenId);

        // Clear approvals
        _approve(address(0), tokenId);

        _clearMetadata(tokenId);

        _balances[owner] -= 1;
        delete _owners[tokenId];

{
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "parser": "slang",
          "printWidth": 120,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false
        }
      },
      {
        "files": ["*.ts", "*.tsx"],
        "options": {
          "parser": "typescript",
          "printWidth": 120,
          "tabWidth": 2,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": true,
          "trailingComma": "all",
          "arrowParens": "always",
          "semi": true,
          "endOfLine": "lf"
        }
      }
    ]
}
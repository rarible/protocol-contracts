{
    "packages": [
        "auction",
        "custom-matchers",
        "deploy",
        "exchange-v2",
        "gas-usage-tests",
        "hardhat-deploy",
        "interfaces",
        "meta-tx",
        "lazy-mint",
        "lib-asset",
        "lib-bp",
        "lib-part",
        "lib-signature",
        "role-operator",
        "royalties",
        "royalties-registry",
        "royalties-upgradeable",
        "tokens",
        "tokens-minimal",
        "tokens-test",
        "transfer-manager",
        "transfer-proxy"
    ],
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "0.7.15",
    "publishConfig": {
        "access": "public"
    },
    "command": {
        "version": {
            "allowBranch": [
                "master",
                "develop",
                "feature/*"
            ]
        },
        "publish": {
            "ignoreChanges": [
                "deploy/build/contracts/*.json",
                "build/contracts/*.json",
                "build"
            ],
            "allowBranch": [
                "master",
                "develop",
                "feature/*"
            ],
            "conventionalCommits": true,
            "message": "chore(release): bump versions after release",
            "yes": true
        }
    }
}

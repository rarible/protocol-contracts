/* Based on https://github.com/tsconfig/bases/blob/501da2bcd640cf95c95805783e1012b992338f28/bases/node22.json */
{
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "#rocketh": [
        "./rocketh.ts"
      ],
      "@rocketh/*": ["../../node_modules/@rocketh/*"],
      "@ifelsedeveloper/*": ["../../node_modules/@ifelsedeveloper/*"],
      "rocketh": ["../../node_modules/rocketh"]
    }
  },
  "include": [
    "./types/ethers-contracts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}